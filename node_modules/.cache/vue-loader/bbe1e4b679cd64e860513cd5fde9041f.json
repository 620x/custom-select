rops: {\n    options: {\n      type: Array,\n      default() {\n        return []\n      },\n    },\n    disabled: {\n      type: Boolean,\n      default() {\n        return false\n      },\n    },\n  },\n  data: () => {\n    return {\n      placeHolder: 'Выберите значение',\n      isDropDown: false,\n      selectedOption: '',\n    };\n  },\n  methods: {\n    setOption(option: Option): void {\n      this.$emit('input', option);\n      this.selectedOption = option.name;\n      this.isDropDown = false;\n    },\n  },\n});\n</script>\n\n<style lang=\"less\" scoped>\n  .custom-select {\n    width: 250px;\n    .label {\n      height: 30px;\n      line-height: 30px;\n      background-color: #1abc9c;\n      color: #FFFFFF;\n      text-align: center;\n      cursor: pointer;\n      &.disabled {\n        color: red;\n      }\n      &:hover {\n        background-color: #16a085;\n      }\n    }\n\n    .option {\n      width: 100%;\n      background-color: #1abc9c;\n      color: #FFFFFF;\n      text-align: center;\n      margin: 0;\n      height: 30px;\n      line-height: 30px;\n      border: 1px solid #FFFFFF;\n      cursor: pointer;\n      &:hover {\n        background-color: #16a085;\n      }\n    }\n  }\n</style>\n"]}]}